<section id="shopify-section-{{ section.id }}" class="vb-lines-comparison">
  <div class="page-width">
    <header class="vb-lines-comparison__head">
      {% if section.settings.heading != blank %}
        <h2>{{ section.settings.heading }}</h2>
      {% endif %}
      {% if section.settings.subheading != blank %}
        <p>{{ section.settings.subheading }}</p>
      {% endif %}
    </header>

    <div class="vb-lines-comparison__grid">
      {% for block in section.blocks %}
        <article
          class="vb-line-card"
          style="--vb-line-accent: {{ block.settings.accent_color }};"
          {{ block.shopify_attributes }}
        >
          <span class="vb-line-card__bar" aria-hidden="true"></span>

          {% if block.settings.icon != blank %}
            <div class="vb-line-card__icon">
              {{
                block.settings.icon
                | image_url: width: 120
                | image_tag:
                  loading: 'lazy',
                  widths: '40,80,120',
                  sizes: '28px',
                  alt: block.settings.title
              }}
            </div>
          {% endif %}

          {% if block.settings.title != blank %}
            <h3>{{ block.settings.title }}</h3>
          {% endif %}

          {% if block.settings.positioning != blank %}
            <p class="vb-line-card__positioning">{{ block.settings.positioning }}</p>
          {% endif %}

          <ul class="vb-line-card__benefits">
            {% if block.settings.benefit_1 != blank %}
              <li>{{ block.settings.benefit_1 }}</li>
            {% endif %}
            {% if block.settings.benefit_2 != blank %}
              <li>{{ block.settings.benefit_2 }}</li>
            {% endif %}
            {% if block.settings.benefit_3 != blank %}
              <li>{{ block.settings.benefit_3 }}</li>
            {% endif %}
          </ul>

          {% if block.settings.button_label != blank and block.settings.button_link != blank %}
            <a href="{{ block.settings.button_link }}" class="vb-line-card__cta">
              {{ block.settings.button_label }}
            </a>
          {% endif %}
        </article>
      {% endfor %}
    </div>
  </div>
</section>

<style>
  #shopify-section-{{ section.id }}.vb-lines-comparison {
    background: #ffffff;
    color: #1f2a1f;
    padding: 2.3rem 0;
  }

  #shopify-section-{{ section.id }} .vb-lines-comparison__head {
    max-width: 64ch;
    margin: 0 auto 1.2rem;
    text-align: center;
  }

  #shopify-section-{{ section.id }} .vb-lines-comparison__head h2 {
    margin: 0;
    font-size: clamp(1.35rem, 4.2vw, 2rem);
    line-height: 1.15;
    letter-spacing: -0.01em;
  }

  #shopify-section-{{ section.id }} .vb-lines-comparison__head p {
    margin: 0.55rem 0 0;
    color: #4b5a4e;
    font-size: 0.98rem;
    line-height: 1.55;
  }

  #shopify-section-{{ section.id }} .vb-lines-comparison__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 0.9rem;
  }

  #shopify-section-{{ section.id }} .vb-line-card {
    background: #ffffff;
    border: 1px solid #e3ebe5;
    border-radius: 1rem;
    padding: 0.95rem;
    display: grid;
    gap: 0.6rem;
  }

  #shopify-section-{{ section.id }} .vb-line-card__bar {
    width: 2.1rem;
    height: 0.22rem;
    border-radius: 999px;
    background: var(--vb-line-accent, #9bbfa4);
  }

  #shopify-section-{{ section.id }} .vb-line-card__icon img {
    width: 24px;
    height: 24px;
    object-fit: contain;
    display: block;
  }

  #shopify-section-{{ section.id }} .vb-line-card h3 {
    margin: 0;
    font-size: 1.06rem;
    line-height: 1.35;
    letter-spacing: -0.005em;
  }

  #shopify-section-{{ section.id }} .vb-line-card__positioning {
    margin: 0;
    font-size: 0.9rem;
    line-height: 1.52;
    color: #465547;
  }

  #shopify-section-{{ section.id }} .vb-line-card__benefits {
    margin: 0;
    padding: 0;
    list-style: none;
    display: grid;
    gap: 0.36rem;
  }

  #shopify-section-{{ section.id }} .vb-line-card__benefits li {
    position: relative;
    margin: 0;
    padding-left: 0.95rem;
    font-size: 0.85rem;
    line-height: 1.45;
    color: #415244;
  }

  #shopify-section-{{ section.id }} .vb-line-card__benefits li::before {
    content: "";
    position: absolute;
    top: 0.45rem;
    left: 0;
    width: 0.38rem;
    height: 0.38rem;
    border-radius: 999px;
    background: var(--vb-line-accent, #9bbfa4);
  }

  #shopify-section-{{ section.id }} .vb-line-card__cta {
    justify-self: start;
    text-decoration: none;
    border-radius: 999px;
    border: 1px solid var(--vb-line-accent, #9bbfa4);
    color: #163021;
    font-size: 0.82rem;
    font-weight: 600;
    padding: 0.48rem 0.82rem;
    transition: 0.2s ease;
  }

  #shopify-section-{{ section.id }} .vb-line-card__cta:hover {
    background: #f3f8f4;
  }

  @media screen and (min-width: 990px) {
    #shopify-section-{{ section.id }} .vb-lines-comparison__grid {
      grid-template-columns: repeat(3, minmax(0, 1fr));
      gap: 1rem;
    }

    #shopify-section-{{ section.id }} .vb-line-card {
      padding: 1.1rem;
    }
  }
</style>

